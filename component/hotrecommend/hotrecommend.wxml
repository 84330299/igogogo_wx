        <image mode="aspectFill" src="{{hotrecommendlist[1].recommendimg}}"></image>
      </view>
      <view class="info">
        <view class="title">{{hotrecommendlist[1].recommendtitle}}</view>
      </view>
    </view>
    <view class="hot_bottom_r" bindtap="showDetail" data-id="{{hotrecommendlist[2].recommendclickurl}}">
      <view class="image">
        <image mode="aspectFill" src="{{hotrecommendlist[2].recommendimg}}"></image>
      </view>
      <view class="info">
        <view class="title">{{hotrecommendlist[2].recommendtitle}}</view>
      </view>
    </view>
  </view>

</view>