/* component/banner/banner.wxss */
@import '/style/weui.wxss';

.banner-container {
  position: relative;
}

.banner {
  height: 400rpx;
}

.banner image {
  width: 100%;
  height: 400rpx;
}

.weui-search-bar {
  position: absolute;
  top: 20;
  margin: auto;
  width: 750rpx;
  background-color: rgba(0, 0, 0, 0);
  z-index: 1000;
  border: 0;
}

.weui-search-bar__form {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 1;
  border: 0;
}
