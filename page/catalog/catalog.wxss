/* page/catalog/catalog.wxss */
.catalog {
  width: 750rpx;
  display: flex;
  background: #fff;
}

.l {
  width: 250rpx;
  background: #f5f5f5;
  text-align: center;
}

.l view {
  height: 60rpx;
  line-height: 60rpx;
  padding: 6px 0;
  /*只设下边线*/
  border-bottom: 1px solid #dedede;
  font-size: 30rpx;
  text-align: center;
}

.l view.active {
  /*背景色变成白色*/
  background: #fff;
  color: #f95b61;
  border-left: 2px solid #f95b61;
  font-size: 35rpx;
}

.r {
  width: 700rpx;
  box-sizing: border-box;
  background: #fff;
}

.r .nav_right_items {
  float: left;
  /*每个item设置宽度是33.33%*/
  width: 33.33%;
  height: 250rpx;
  text-align: center;
}

.r .nav_right_items image {
  /*被图片设置宽高*/
  width: 150rpx;
  height: 150rpx;
  margin-top: 15rpx;
}

.r .nav_right_items text {
  /*给text设成块级元素*/
  display: block;
  margin-top: 5rpx;
  font-size: 25rpx;
  color: black;
  /*设置文字溢出部分为...*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.nodata_text {
  margin-top: 20px;
  color: black;
  font-size: 14px;
  text-align: center;
}
