.myCanvas {
  width: 750rpx;
  height: 1080rpx;
}

.goodsimgs {
  width: 750rpx;
  height: 750rpx;
}

.goodsimgs image {
  width: 750rpx;
  height: 750rpx;
}

.goods-base {
  width: 750rpx;
  /* height: 306rpx; */
  overflow: hidden;
  background: #fff;
  border-top: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
}

.goods-base .c {
  display: block;
  height: 100%;
  margin-left: 31.25rpx;
}

.goods-base .name {
  height: 70rpx;
  font-size: 31rpx;
  line-height: 31rpx;
  padding: 38rpx 31.25rpx 0 0;
}

.goods-base .coupon {
  display: block;
  width: 730rpx;
  /* height: 180rpx; */
  margin-left: 10rpx;
  margin-bottom: 10rpx;
}

.goods-base .coupon .coupon-info {
  color: #fff;
  background: linear-gradient(to right, #f79ea2, #f95b61);
  border-radius: 10rpx;
  display: flex;
  font-size: 30rpx;
}

.goods-base .coupon .coupon-info .coupon-desc {
  display: flex;
  flex-direction: column;
  flex: 3;
  text-align: center;
  border-right: 2px dotted #fff;
  font-size: 25rpx;
}

.goods-base .coupon .coupon-info .coupon-desc .cc {
  font-size: 40rpx;
  padding-bottom: 10rpx;
}

.goods-base .coupon .coupon-info .coupon-price {
  display: flex;
  flex-direction: column;
  flex: 2;
  border-right: 2px dotted #fff;
  text-align: center;
}

.goods-base .coupon .coupon-info .coupon-price .t {
  /* display: block; */
  flex: 1;
  line-height: 80rpx;
  font-size: 35rpx;
}

.goods-base .coupon .coupon-info .coupon-price .cc {
  /* display: block; */
  flex: 1;
  line-height: 80rpx;
  font-size: 55rpx;
}

