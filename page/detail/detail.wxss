/* 相关商品推荐 */

.goods-base .desc {
  height: 43rpx;
  margin-bottom: 41rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #999;
}

.goods-base .price {
  text-align: left;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #b4282d;
  display: flex;
}

.goods-base .price .l {
  flex: 1;
}

.reserve {
  color: #999;
  text-decoration: line-through;
}

.goods-rate {
  margin-top: 10rpx;
  text-align: center;
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  border-bottom: 1px solid #f4f4f4;
  border-top: 1px solid #f4f4f4;
}

.goods-rate .weui-cell_access {
  font-size: 30rpx;
  text-align: left;
  border-bottom: 1px solid #f4f4f4;
}

.goods-rate .rate {
  font-size: 25rpx;
  text-align: left;
  margin-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.goods-rate .rate .pics {
  margin-top: 20rpx;
}

.goods-rate .rate .pics image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
}

.goods-rate .rate .allRate {
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
  border: 1px solid #999;
  border-radius: 3px;
  color: #999;
}

.goods-rate .rate .userInfoAndTime {
  display: flex;
}

.goods-rate .rate .displayUserNick {
  flex: 1;
}

.goods-rate .rate .displayUserNick image {
  width: 30rpx;
  height: 30rpx;
  border-radius: 100%;
  vertical-align: middle;
  margin-right: 10rpx;
}

.goods-rate .rate .time {
  color: #999;
}

.goods-rate .rate .auctionSku {
  color: #999;
}

.goods-info {
  margin-top: 10rpx;
  border-top: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
  background-color: #fff;
  text-align: center;
}

.goods-rate .norate {
  text-align: center;
  font-size: 30rpx;
  font-weight: 400;
}

.bottom-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  width: 750rpx;
  height: 100rpx;
  display: inline-flex;
  background: #fff;
}

.bottom-btn .home {
  height: 100rpx;
  width: 50rpx;
  border-top: 1px solid #f4f4f4;
  border-right: 1px solid #f4f4f4;
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.home image {
  height: 100rpx;
  width: 100rpx;
}

.bottom-btn .coupon {
  height: 100rpx;
  flex: 3;
  text-align: center;
}

.bottom-btn .coupon .coupon-money {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  color: #f95b61;
}

.bottom-btn .coupon .no-coupon-money {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  color: #f95b61;
}

.bottom-btn .coupon .coupon-time {
  font-size: 25rpx;
  color: #999;
  height: 40rpx;
  line-height: 40rpx;
}

.bottom-btn .buy {
  height: 100rpx;
  /* line-height: 96rpx; */
  flex: 2;
  text-align: center;
  background: #f95b61;
  color: #fff;
  /* border: 1px solid #f95b61; */
}

.bottom-btn .buy button {
  border: 0px;
  background: #f95b61;
  color: #fff;
  line-height: 100rpx;
  /* border-top: 1px solid #f4f4f4; */
}
